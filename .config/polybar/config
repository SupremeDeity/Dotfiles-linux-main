;; ====================== MODULES ==========================

[module/bspwm]
type = internal/bspwm

pin-workspaces = true
enable-click = true
enable-scroll = true

format = <label-state>
format-background = ${colors.background}
format-foreground = ${colors.foreground}
label-monitor = %name%
label-focused-background = ${colors.accent}
label-occupied-background = ${colors.background}
label-urgent-background = ${colors.red}
label-empty-background = ${colors.background}
label-focused-foreground = ${colors.accent2}

label-focused-padding = 2
label-urgent-padding = 2
label-occupied-padding = 2
label-empty-padding = 2

label-focused = 
label-occupied = 
label-urgent = 
label-empty = 

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-mode-padding = 2
label-mode-foreground = ${colors.accent}
label-mode-background = ${colors.background}

label-focused = %index%
label-focused-background = ${colors.accent}
label-focused-foreground = ${colors.background}
label-focused-padding = 2

label-unfocused = %index%
label-unfocused-background = ${colors.background}
label-unfocused-foreground = ${colors.accent}
label-unfocused-padding = 2

label-visible = %index%
label-visible-background = ${colors.background}
label-visible-foreground = ${colors.foreground}
label-visible-padding = 2

label-urgent = %index%
label-urgent-background = ${colors.red}
label-urgent-padding = 2

[module/wifi]
type = internal/network
interface = wlp3s0
interval = 1.0
tail = true

format-connected = <ramp-signal><label-connected>
format-connected-foreground = ${colors.foreground}
format-connected-background = ${colors.background}
format-connected-padding = 2
label-connected = %downspeed:1:10%
;;label-connected = %essid% | %downspeed:1:10% & %upspeed:1:10%
label-connected-backgroun = ${colors.background}
label-disconnected-padding = 2
format-disconnected-prefix-padding = 2
format-disconnected-prefix  = "睊"
format-disconnected-prefix-foreground = ${colors.green}
format-disconnected-prefix-background = ${colors.background}
format-disconnected-foreground = ${colors.foreground}
format-disconnected-background = ${colors.background}

format-disconnected = "No-Wifi  "

ramp-signal-0 = "直  "
ramp-signal-foreground = ${colors.green}
ramp-signal-background = ${colors.background}

[module/battery]

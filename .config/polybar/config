;; ====================== POLYBAR IConfig ===============================

;; ======================      COLORS     ===============================
[colors]
background = ${xrdb:background}
foreground = ${xrdb:foreground}
black       = #282a36
red         = #ff5555
green       = #50fa7b
yellow      = #f1fa8c
blue        = #6272a4
magenta     = #ff79c6
cyan        = #8be9fd
white       = #f8f8f2
accent      = ${xrdb:color7}
accent2	    = ${xrdb:color2}
color3      = ${xrdb:color4}

;; ====================== BSPWM BARS ===============================
[bar/left]
width = 18%
height = 4%
offset-x = 11
offset-y = 5
radius = 10
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = "Ubuntu Mono:size=11;0"
font-1 = "Material Icons:size=16;3"

modules-left = time lxsession

wm-restack = bspwm
override-redirect = false

[bar/middle]
width = 10%
height = 4%
offset-x = 43.5%
offset-y = 5
radius = 10
fixed-center = true

;;background = ${colors.color3}
background = #00000000
foreground = ${colors.foreground}

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

font-0 = Material Icons:size=16:antialias=true;3

modules-center = bspwm

wm-restack = bspwm
override-redirect = false

[bar/right]
width = 25%
height = 4%
offset-x = 74%
offset-y = 5
radius = 10
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

module-margin-left = 0
module-margin-right = 0

padding-left = 1
padding-right = 0

font-0 = Ubuntu Mono:style=Bold:size=11;0
font-1 = Material Icons:size=15:antialias=true;3
font-2 = DejaVuSansMono Nerd Font Mono:size=15:antialias=true;2

modules-left = battery wifi updates-pacman


wm-restack = bspwm
override-redirect = false

;; ===================== MODULES ====================
[module/time]
type = internal/date
interval = 1
date = %a, %d %B
time = %I:%M %
label-font = 0
label = "  %date% | %time% "
label-foreground = ${colors.accent}
label-background = ${colors.accent2}

[module/bspwm]
type = internal/bspwm

pin-workspaces = true
enable-click = true
enable-scroll = true
format = <label-state>
;;format-background = ${colors.background}
format-background = #00000000
format-foreground = ${colors.accent}

label-active-font = 1
label-monitor = %name%

label-focused-background = #00000000
label-occupied-background = #00000000
label-urgent-background = ${colors.red}
label-empty-background = #00000000

label-focused-foreground = ${colors.accent2}
label-occupied-foreground = ${colors.color3}
label-urgent-foreground = ${colors.red}
label-empty-foreground = ${colors.color3}

label-focused = ""
label-occupied = ""
label-urgent = ""
label-empty = ""

[module/lxsession]
type = custom/text
exec = 
content-foreground = ${colors.red}
content-background = ${colors.background}
content = "  "
click-left = lxsession-logout


[module/updates-pacman]
type = custom/script
exec = ~/.config/polybar/scripts/pacman_updates.sh
tail = true
click-left = pkill -USR1 pacman_updates.sh
click-right = pamac-manager --updates

[module/battery]
type = internal/battery

full-at = 99

battery = BAT0
adapter = ADP0

poll-interval = 2
time-format = %H:%M

format-charging-padding-right = 2
format-full-padding-right = 2
label-full-padding-right = 2
label-discharging-padding-right = 2

format-charging = "%{A2:exec ~/.config/polybar/scripts/batstatus.sh:}<animation-charging><label-charging>%{A}"
format-discharging = "%{A2:exec ~/.config/polybar/scripts/batstatus.sh:}<ramp-capacity><label-discharging>%{A}"
format-full-prefix = "   "
format-full-prefix-foreground = ${colors.magenta}
format-full-prefix-background = ${colors.background}
label-full = "100%"
label-full-background = ${colors.background}
label-full-foreground = ${colors.foreground}
label-charging-padding-right = 2
label-charging-background = ${colors.background}
label-charging-foreground = ${colors.foreground}
label-discharging-foreground = ${colors.foreground}
label-discharging-background = ${colors.background}

ramp-capacity-0 = "  "
ramp-capacity-1 = "  "
ramp-capacity-2 = "  "
ramp-capacity-3 = "  "
ramp-capacity-4 = "  "
ramp-capacity-5 = "  "
ramp-capacity-padding-left = 2
ramp-capacity-background = ${colors.background}
ramp-capacity-foreground = ${colors.magenta}

animation-charging-padding-left = 2
animation-charging-0 = " "
animation-charging-1 = " "
animation-charging-background = ${colors.background}
animation-charging-foreground = ${colors.magenta}
animation-charging-framerate = 750

[module/wifi]
type = internal/network
interface = wlp3s0
interval = 1.0
tail = true

label-active-font = 1

format-connected = <ramp-signal><label-connected>
format-connected-foreground = ${colors.foreground}
format-connected-background = ${colors.background}
format-connected-padding = 2
label-connected = %{A1:networkmanager_dmenu:}%downspeed:1:10%%{A}
label-connected-background = ${colors.background}
label-disconnected-padding = 2
format-disconnected-prefix-padding = 2
format-disconnected-prefix  = ""
format-disconnected-prefix-foreground = ${colors.green}
format-disconnected-prefix-background = ${colors.background}
format-disconnected-foreground = ${colors.foreground}
format-disconnected-background = ${colors.background}

format-disconnected = "%{A1:networkmanager_dmenu:}No-Wifi%{A}  "

ramp-signal-0 = "  "
ramp-signal-foreground = ${colors.green}
ramp-signal-background = ${colors.background}

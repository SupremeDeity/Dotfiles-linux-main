[module/xbacklight]
type = internal/xbacklight
format = <label>
format-foreground = ${colors.foreground}
format-background = ${colors.background}
format-padding = 2
format-fontseize = 13
scroll = true
exec = ~/.bin/light.sh
scroll-up = exec light -A 10
scroll-down = exec light -U 10
format-prefix-foreground = ${colors.red}
format-prefix = "  "

[module/lang]
